@using Presentation.Web.Controllers
@model Presentation.Model.ContactViewModel

<div id="ContactForm">
    @using (Html.BeginForm("Contact", "Home", FormMethod.Post, new { id = "frmContact" }))
    { 
        <div class="form-group row">
            @Html.LabelFor(model => model.ContactName, new { @class = "col-md-4 col-form-label", @id = "required" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.ContactName, new {htmlAttributes = new {@class = "col-md-8 form-control"}})
                @Html.ValidationMessageFor(model => model.ContactName, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.ContactEmail, new {@class = "col-md-4 col-form-label", @id = "required"})
            <div class="col-md-8">
                @Html.EditorFor(model => model.ContactEmail, new {htmlAttributes = new {@class = "col-md-8 form-control"}})
                @Html.ValidationMessageFor(model => model.ContactEmail, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.ContactPhoneNumber, new {@class = "col-md-4 col-form-label", @id = "required"})
            <div class="col-md-8">
                @Html.EditorFor(model => model.ContactPhoneNumber, new {htmlAttributes = new {@class = "col-md-8 form-control"}})
                @Html.ValidationMessageFor(model => model.ContactPhoneNumber, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.ContactDescription, new {@class = "col-md-4 col-form-label", @id = "required"})
            <div class="col-md-8">
                @Html.TextAreaFor(model => model.ContactDescription, new {htmlAttributes = new {@class = "col-md-8 form-control"}})
                @Html.ValidationMessageFor(model => model.ContactDescription, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="pull-right">
            <button type="submit" id="submitContact" class="btn btn-primary">Submit</button>
        </div>
    }
</div>